<html 'ng-app'>
head
    script(src='http://code.angularjs.org/1.1.3/angular.min.js')
    script(src='script.js')
  body
    div(ng-controller='FetchCtrl')
      select(ng-model='method')
        option GET
        option POST
        option PUT
        option REMOVE
      input(type='text', ng-model='url', size='80')
      button(ng-click='fetch()') fetch
      br
      button(ng-click='updateModel(\'GET\', \'HTTP://GOOGLE.COM\')') Sample GET
      pre.
        \nhttp status code: {{status}}        
      pre.
        \nhttp response data: {{data}}        
      | {{url}}
